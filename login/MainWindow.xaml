<Window x:Class="login.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:login"
        mc:Ignorable="d"
        Title="Login" Height="350" Width="380.583">
    <Grid Margin="0,0,2,0">
        <Label x:Name="label" Content="Name" HorizontalAlignment="Left" Margin="100,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="18" Margin="100,81,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154"/>
        <Label x:Name="label1" Content="Password" HorizontalAlignment="Left" Margin="100,109,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.892,-0.199"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="100,140,0,0" VerticalAlignment="Top"  Width="159"/>
        <Button x:Name="botonAceptar" Content="Aceptar" HorizontalAlignment="Left" Margin="100,177,0,0" VerticalAlignment="Top" Width="75" Click="botonAceptar_Click"/>
        <Button x:Name="botonCancelar" Content="Cancelar" HorizontalAlignment="Left" Margin="184,177,0,0" VerticalAlignment="Top" Width="75" Click="botonCancelar_Click"/>


    </Grid>
</Window>
